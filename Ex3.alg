algoritmo "semnome"
// Função :
// Autor :
// Data : 02/02/2022
// Seção de Declarações 
var
   Area, base, altura: Real

inicio
      Escreva ("Digite a base de um triangulo ")
      leia (base)
      Escreva ("Digite a altura de um triangulo ")
      leia (altura)
      Area <- (base * altura) / 2)
      Escreva ("A area total de um triangulo sera ", area)
fimalgoritmo
